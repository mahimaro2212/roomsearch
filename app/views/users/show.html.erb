<%= stylesheet_link_tag 'usershow', :media => "all" %>

<div class="johou">
  <h3>user情報</h3>
  <p>名前 : <%= @user.name %></p>
  <p>メールアドレス : <%= @user.email %></p>
  <p>プロフィール : <%= @user.profile %></p>

  <% if current_user.id == @user.id %>
    <%= link_to "編集する", edit_user_registration_path %>
  <% end %>

  <h3>userの投稿</h3>
    <% @user.posts.each do |t| %>
      <div class="usershow">
        <%= t.time %>
        <%= t.room %>
        <%= t.about %>
      <% end %>
    </div>

  <%= link_to "一覧に戻る", posts_path %>
</div>